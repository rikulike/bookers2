<%= render 'users/user_info', user: @user %>
<%= render 'new', book: @book %>


<h1>Book detail</h1>
<%= image_tag @B.user.get_profile_image %>
<%=link_to @B.user.name,user_path(@B.user.id) %>
<%=link_to @B.title, book_path(@B.id) %>
<%=@B.body %>

<% if @B.user == current_user %>
  <%= link_to "Edit", edit_book_path(@B.id) %>
  <%=link_to "Destroy", book_path(@B.id) %>
<% end %>